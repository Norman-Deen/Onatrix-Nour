    var lOurProjectsImage01  = linkedPage?.Value<IPublishedContent>("lOurProjectsImage01")?.Url() ?? "";
    var lOurProjectsImage02  = linkedPage?.Value<IPublishedContent>("lOurProjectsImage02")?.Url() ?? "";
