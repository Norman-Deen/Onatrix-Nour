    var tag03                = linkedPage?.Value<string>("tag03") ?? "No Tag Found";
    var tag04                = linkedPage?.Value<string>("tag04") ?? "No Tag Found";
    var tag05                = linkedPage?.Value<string>("tag05") ?? "No Tag Found";
    var tag06                = linkedPage?.Value<string>("tag06") ?? "No Tag Found";
