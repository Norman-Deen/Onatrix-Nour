@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
    Layout = "mainLayout.cshtml";
    ViewBag.Title = Model?.Value("pageTitle") ?? null;
    var aboutBackgroundImage = Model?.Value<IPublishedContent>("aboutBackgroundImage")?.Url() ?? "";

      var leftSectionImage01 = Model?.Value<IPublishedContent>("leftSectionImage01")?.Url() ?? "";
      var leftSectionImage02 = Model?.Value<IPublishedContent>("leftSectionImage02")?.Url() ?? "";
          var leftSectionImage03 = Model?.Value<IPublishedContent>("leftSectionImage03")?.Url() ?? "";


}



<!-------banner-------------------->
<section id="about" class="banner bg-gray">
    <div class="background"> 
        <img src="@aboutBackgroundImage" alt="Background image">
        <div class="content">
            <h2>@Model?.Value("aboutHeadline")</h2>
            <div class="links">
                <a class="home" href="@Model?.Value("aboutLink1")">@Model?.Value("aboutLinkText1")</a>
                <div class="chevron"><i class="fa-regular fa-chevron-right"></i></div>
                <a class="home" href="@Model?.Value("aboutLink2")">@Model?.Value("aboutLinkText2")</a>
                <div class="chevron"><i class="fa-regular fa-chevron-right"></i></div>
                <a class="activ" href="#">@Model?.Value("aboutHeadline")</a>
            </div>
        </div>
    </div>
</section>


