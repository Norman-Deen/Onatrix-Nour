@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@inject Umbraco.Cms.Web.Common.UmbracoHelper UmbracoHelper

@{
	Layout = "mainLayout.cshtml";
    ViewBag.Title = Model?.Value("pageTitle") ?? null;

    var ourExpertsMoreExpert1Image = Model?.Value<IPublishedContent>("ourExpertsMoreExpert1Image")?.Url() ?? "";
    var ourExpertsMoreExpert2Image = Model?.Value<IPublishedContent>("ourExpertsMoreExpert2Image")?.Url() ?? "";
    var ourExpertsMoreExpert3Image = Model?.Value<IPublishedContent>("ourExpertsMoreExpert3Image")?.Url() ?? "";
    var ourExpertsMoreExpert4Image = Model?.Value<IPublishedContent>("ourExpertsMoreExpert4Image")?.Url() ?? "";
    var ourExpertsExpert1Image     = Model?.Value<IPublishedContent>("ourExpertsExpert1Image")?.Url() ?? "";
    var ourExpertsExpert2Image     = Model?.Value<IPublishedContent>("ourExpertsExpert2Image")?.Url() ?? "";
    var ourExpertsExpert3Image     = Model?.Value<IPublishedContent>("ourExpertsExpert3Image")?.Url() ?? "";
    var aboutBackgroundImage       = Model?.Value<IPublishedContent>("aboutBackgroundImage")?.Url() ?? "";
    var reviewsImage               = Model?.Value<IPublishedContent>("reviewsImage")?.Url() ?? "";
    var ceoImage                   = Model?.Value<IPublishedContent>("ceoImage")?.Url() ?? "";
}




<!------------banner------------>
<section class="banner bg-gray">
    <div class="banner-background">
        <img src="@aboutBackgroundImage" alt="Backround image">
        <div class="content">
            <h2>@Model?.Value("aboutHeadline")</h2>
            <div class="links">
                <a class="home" href="@Model?.Value("aboutLink1")">@Model?.Value("aboutLinkText1")</a>
                    <div class="chevron"><i class="fa-regular fa-chevron-right"></i></div>
                <a class="activ" href="@Model?.Value("aboutLink2")">@Model?.Value("aboutLinkText2")</a>
            </div>
        </div>
    </div>
</section>


<!------------------CEO------------------->
<section class="ceo">
    <div class="container">
        <div class="ceo-image">
            <div class="image">
                <img src="@ceoImage" alt="Image of @Model?.Value("ceoHeadline")">
            </div>
            <h5>@Model?.Value("ceoHeadline")</h5>
        </div>

        <div class="ceo-text">
            <h4>“@Model?.Value("ceoQuote")”</h4>
            <h6>@Model?.Value("ceoText")</h6>
        </div>
    </div>
</section>


<!------------REVIEWS------------>
<section class="reviews bg-gray">
    <div class="container">
        <div class="content">
            <div class="reviews-text">
                <h6>@Model?.Value("reviewsHeadline")</h6>
                <h2>@Model?.Value("reviewsHeading")</h2>
                <h5>@Model?.Value("reviewsText")</h5>
                <div class="star-rating">
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                </div>
                <p>@Model?.Value("reviewsName")</p>
                <h5 class="swedbank">@Model?.Value("reviewsBank")</h5>
            </div>
        </div>
        <div class="reviews-image">
            <img src="@reviewsImage" alt="Image of @Model?.Value("reviewsName")">
        </div>
    </div>
</section>


<!------------our-experts---------------->
<section class="our-experts">

    <div class="container">
        <div class="headline">
            <h6>@Model?.Value("ourExpertsHeadline")</h6>
            <h2>@Model?.Value("ourExpertsHeading")</h2>
        </div>

        <!------------------Expert1------------------->
        <div class="content-expert">
            <div class="our-expert">
                <div class="image">
                    <img src="@ourExpertsExpert1Image" alt="Image of @Model?.Value("ourExpertsExpert1Name")">
                </div>

                <h4>@Model?.Value("ourExpertsExpert1Name")</h4>
                <p>@Model?.Value("ourExpertsExpert1Text")</p>
            </div>

            <div class="our-expert">
                <div class="image">
                    <img src="@ourExpertsExpert2Image" alt="Image of @Model?.Value("ourExpertsExpert2Name")">
                </div>

                <h4>@Model?.Value("ourExpertsExpert2Name")</h4>
                <p>@Model?.Value("ourExpertsExpert2Text")</p>
            </div>

            <div class="our-expert">
                <div class="image">
                    <img src="@ourExpertsExpert3Image" alt="Image of @Model?.Value("ourExpertsExpert3Name")">
                </div>

                <h4>@Model?.Value("ourExpertsExpert3Name")</h4>
                <p>@Model?.Value("ourExpertsExpert3Text")</p>
            </div>
        </div>



        <!------------------Expert2------------------->
        <div class="content-more-expert">
            <div class="our-expert">
                <div class="image">
                    <img src="@ourExpertsMoreExpert1Image" alt="Image of @Model?.Value("ourExpertsMoreExpert1Name")">
                </div>

                <h5>@Model?.Value("ourExpertsMoreExpert1Name")</h5>
                <p>@Model?.Value("ourExpertsMoreExpert1Text")</p>
            </div>

            <div class="our-expert">
                <div class="image">
                    <img src="@ourExpertsMoreExpert2Image" alt="Image of @Model?.Value("ourExpertsMoreExpert2Name")">
                </div>

                <h5>@Model?.Value("ourExpertsMoreExpert2Name")</h5>
                <p>@Model?.Value("ourExpertsMoreExpert2Text")</p>
            </div>

            <div class="our-expert">
                <div class="image">
                    <img src="@ourExpertsMoreExpert3Image" alt="Image of @Model?.Value("ourExpertsMoreExpert3Name")">
                </div>

                <h5>@Model?.Value("ourExpertsMoreExpert3Name")</h5>
                <p>@Model?.Value("ourExpertsMoreExpert3Text")</p>
            </div>

            <div class="our-expert">
                <div class="image">
                    <img src="@ourExpertsMoreExpert4Image" alt="Image of @Model?.Value("ourExpertsMoreExpert4Name")">
                </div>

                <h5>@Model?.Value("ourExpertsMoreExpert4Name")</h5>
                <p>@Model?.Value("ourExpertsMoreExpert4Text")</p>
            </div>
        </div>  
    </div>
</section>



