@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@inject Umbraco.Cms.Web.Common.UmbracoHelper UmbracoHelper

@{
	Layout                     = "mainLayout.cshtml";
    ViewBag.Title              = Model?.Value("pageTitle") ?? null;

    var Expert1Image           = Model?.Value<IPublishedContent>("Expert1Image")?.Url() ?? "";
    var Expert2Image           = Model?.Value<IPublishedContent>("Expert2Image")?.Url() ?? "";
    var Expert3Image           = Model?.Value<IPublishedContent>("Expert3Image")?.Url() ?? "";
    var Expert4Image           = Model?.Value<IPublishedContent>("Expert4Image")?.Url() ?? "";
    var Expert5Image           = Model?.Value<IPublishedContent>("Expert5Image")?.Url() ?? "";
    var Expert6Image           = Model?.Value<IPublishedContent>("Expert6Image")?.Url() ?? "";
    var Expert7Image           = Model?.Value<IPublishedContent>("Expert7Image")?.Url() ?? "";
                               
    var aboutBackgroundImage   = Model?.Value<IPublishedContent>("aboutBackgroundImage")?.Url() ?? "";
    var reviewsImage           = Model?.Value<IPublishedContent>("reviewsImage")?.Url() ?? "";
    var ceoImage               = Model?.Value<IPublishedContent>("ceoImage")?.Url() ?? "";
}




<!------------banner------------>
<section class="banner bg-gray">
    <div class="banner-background">
        <img src="@aboutBackgroundImage" alt="Backround image">
        <div class="content">
            <h2>@Model?.Value("aboutHeadline")</h2>
            <div class="links">
                <a class="home" href="@Model?.Value("aboutLink1")">@Model?.Value("aboutLinkText1")</a>
                    <div class="chevron"><i class="fa-regular fa-chevron-right"></i></div>
                <a class="activ" href="@Model?.Value("aboutLink2")">@Model?.Value("aboutLinkText2")</a>
            </div>
        </div>
    </div>
</section>


<!------------CEO--------------->
<section class="ceo">
    <div class="container">
        <div class="ceo-image">
            <div class="image">
                <img src="@ceoImage" alt="Image of @Model?.Value("ceoHeadline")">
            </div>
            <h5>@Model?.Value("ceoHeadline")</h5>
        </div>

        <div class="ceo-text">
            <h4>“@Model?.Value("ceoQuote")”</h4>
            <h6>@Model?.Value("ceoText")</h6>
        </div>
    </div>
</section>


<!------------REVIEWS------------>
<section class="reviews bg-gray">
    <div class="container">
        <div class="content">
            <div class="reviews-text">
                <h6>@Model?.Value("reviewsHeadline")</h6>
                <h2>@Model?.Value("reviewsHeading")</h2>
                <h5>@Model?.Value("reviewsText")</h5>
                <div class="star-rating">
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                </div>
                <p>@Model?.Value("reviewsName")</p>
                <h5 class="swedbank">@Model?.Value("reviewsBank")</h5>
            </div>
        </div>
        <div class="reviews-image">
            <img src="@reviewsImage" alt="Image of @Model?.Value("reviewsName")">
        </div>
    </div>
</section>


<!---------our-experts----------->
<section class="our-experts">

    <div class="container">
        <div class="headline">
            <h6>@Model?.Value("ourExpertsHeadline")</h6>
            <h2>@Model?.Value("ourExpertsHeading")</h2>
        </div>

        <!------------------Expert A------------------->
        <div class="content-expert">
            <div class="our-expert">
                <div class="image">
                    <img src="@Expert1Image" alt="Image of @Model?.Value("Expert1Image")">
                </div>
                <h4>@Model?.Value("Expert1Name")</h4>
                <p>@Model?.Value("Expert1Text")</p>
            </div>
            <div class="our-expert">
                <div class="image">
                    <img src="@Expert2Image" alt="Image of @Model?.Value("Expert2Image")">
                </div>
                <h4>@Model?.Value("Expert2Name")</h4>
                <p>@Model?.Value("Expert2Text")</p>
            </div>
            <div class="our-expert">
                <div class="image">
                    <img src="@Expert3Image" alt="Image of @Model?.Value("Expert3Image")">
                </div>
                <h4>@Model?.Value("Expert3Name")</h4>
                <p>@Model?.Value("Expert3Text")</p>
            </div>
        </div>


        <!------------------Expert B------------------->
        <div class="content-more-expert">
            <div class="our-expert">
                <div class="image">
                    <img src="@Expert4Image" alt="Image of @Model?.Value("Expert4Image")">
                </div>
                <h5>@Model?.Value("Expert4Name")</h5>
                <p>@Model?.Value("Expert4Text")</p>
            </div>
            <div class="our-expert">
                <div class="image">
                    <img src="@Expert5Image" alt="Image of @Model?.Value("Expert5Image")">
                </div>
                <h5>@Model?.Value("Expert5Name")</h5>
                <p>@Model?.Value("Expert5Text")</p>
            </div>
            <div class="our-expert">
                <div class="image">
                    <img src="@Expert6Image" alt="Image of @Model?.Value("Expert6Image")">
                </div>
                <h5>@Model?.Value("Expert6Name")</h5>
                <p>@Model?.Value("Expert6Text")</p>
            </div>
            <div class="our-expert">
                <div class="image">
                    <img src="@Expert7Image" alt="Image of @Model?.Value("Expert7Image")">
                </div>
                <h5>@Model?.Value("Expert7Name")</h5>
                <p>@Model?.Value("Expert7Text")</p>
            </div>
        </div>


</section>



