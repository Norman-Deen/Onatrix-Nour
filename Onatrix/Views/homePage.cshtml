@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
    Layout                    = "mainLayout.cshtml";
    ViewBag.Title             = Model?.Value("pageTitle") ?? null;

    var projects01Image       = Model?.Value<IPublishedContent>("projects01Image")?.Url() ?? "";
    var projects02Image       = Model?.Value<IPublishedContent>("projects02Image")?.Url() ?? "";
    var projects03Image       = Model?.Value<IPublishedContent>("projects03Image")?.Url() ?? "";
    var projects04Image       = Model?.Value<IPublishedContent>("projects04Image")?.Url() ?? "";
                              
    var successImage1         = Model?.Value<IPublishedContent>("successImage1")?.Url() ?? "";
    var successImage2         = Model?.Value<IPublishedContent>("successImage2")?.Url() ?? "";

    var clientImage1          = Model?.Value<IPublishedContent>("clientImage1")?.Url() ?? "";
    var clientImage2          = Model?.Value<IPublishedContent>("clientImage2")?.Url() ?? "";

    var backgroundImage       = Model?.Value<IPublishedContent>("heroBackgroundImage")?.Url() ?? "";
    var signatureImage        = Model?.Value<IPublishedContent>("aboutSignatureImage")?.Url() ?? "";
}


<!----------Hero-section---------->
<section  class="hero-section">
    <div class="hero-background" style="background-image:url(@backgroundImage);background-size: cover; background-position: 60%">
        <div class="container">
            <div class="hero-content">
                <h1 class="headline">@Model?.Value("heroHeadline")</h1>
                <p class="ingress">@Model?.Value("heroText")</p>
                <div>
                    <a href="@Model?.Value("heroButtonUrl")" class="btn btn-primary">@Model?.Value("heroButtonText")</a>
                </div>
            </div>
        </div>
    </div>
</section>


<!----------about-us---------->
<section class="about-us">
    <div class="container">
        <div class="content">
            <div class="headline">
                <h6>@Model?.Value("aboutHeadline")</h6>
                <h2>@Model?.Value("aboutTitle")</h2>
            </div>
            <blockquote class="quote">“@Model?.Value("aboutQuote")”</blockquote>
            <p>@Model?.Value("aboutText")</p>
            <div class="signature-container">
                <div class="signature">
                    <img class="signature-image" src="@signatureImage" alr=""/>
                    <div class="clarification">
                        <p class="name">@Model?.Value("aboutSignatureText")</p>
                    </div>
                </div>
            </div>
        </div>


        <!----------Request a call back/Partial---------->
        @await Html.PartialAsync("partials/static/call-back.cshtml")

        
    </div>
</section>



<!----------our-services/Partial----------->
@await Html.PartialAsync("partials/static/Solutions.cshtml")


<!----------clients----------->
<section class="clients">
    <div class="container">
        <div class="content">
            <h2>@Model?.Value("clientHeadline")</h2>
            <h2 class="clients-h2">@Model?.Value("clientHeadline2")</h2>
            <p>@Model?.Value("clientText")</p>
            <div>
                <a href="@Model?.Value("clientButtomLink")" class="btn btn-primary">@Model?.Value("clientButtomText")</a>
            </div>
        </div>

        <div class="clients-image-1">
            <img src="@clientImage1" alt="">
        </div>
        <div class="clients-image-2">
            <img src="@clientImage2" alt="Image of @Model?.Value("clientHeadline2")">
        </div>
    </div>
</section>


<!----------success----------->
<section class="success">
    <div class="bg-primary">
        <div class="container">
            <h6>@Model?.Value("successHeadline")</h6>
            <h2>@Model?.Value("successTitle")</h2>
            <div class="success-stories">
                <div class="success-story">
                    <h1>@Model?.Value("successNumber1")</h1>
                    <h5>@Model?.Value("successText1")</h5>
                </div>
                <div class="success-story">
                    <h1>@Model?.Value("successNumber2")</h1>
                    <h5>@Model?.Value("successText2")</h5>
                </div>
                <div class="success-story">
                    <h1>@Model?.Value("successNumber3")</h1>
                    <h5>@Model?.Value("successText3")</h5>
                </div>
            </div>
            <div class="success-image1">
                <img src="@successImage1" alt="">
            </div>
            <div class="success-image2">
                <img src="@successImage2" alt="">
            </div>
        </div>
    </div>
</section>


<!----------our-projects----------->
<section class="our-projects">
    <div class="container">
        <h6>@Model?.Value("projectsHeadline")</h6>
        <h2>@Model?.Value("projectsTitle")</h2>
    </div>
    <div class="projects">
        <a href="@Model?.Value("projects01Link")" class="project">
            <div class="our-projects-image">
                <img src="@projects01Image" alt="Image of @Model?.Value("projects01Image")">
            </div>
            <div class="bg-primary">
                <h5>@Model?.Value("projects01Headline")</h5>
                <p>@Model?.Value("projects01Text")</p>
            </div>
        </a>
        <a href="@Model?.Value("projects02Link")" class="project">
            <div class="our-projects-image">
                <img src="@projects02Image" alt="Image of @Model?.Value("projects02Image")">
            </div>
            <div class="bg-primary-active">
                <div class="info">
                    <h5>@Model?.Value("projects02Headline")</h5>
                    <p>@Model?.Value("projects02Text")</p>
                </div>
                
                <div class="chevron"><i class="fa-regular fa-chevron-right"></i></div>
            </div>
        </a>
        <a href="@Model?.Value("projects03Link")" class="project">
            <div class="our-projects-image">
                <img src="@projects03Image" alt="Image of @Model?.Value("projects03Image")">
            </div>
            <div class="bg-primary">
                <h5>@Model?.Value("projects03Headline")</h5>
                <p>@Model?.Value("projects03Text")</p>
            </div>
        </a>
        <a href="@Model?.Value("projects04Link")" class="project">
            <div class="our-projects-image">
                <img src="@projects04Image" alt="Image of @Model?.Value("projects04Image")">
            </div>
            <div class="bg-primary">
                <h5>@Model?.Value("projects04Headline")</h5>
                <p>@Model?.Value("projects04Text")</p>
            </div>
        </a>
    </div>
</section>


<!----------partners/Partial----------->
@await Html.PartialAsync("partials/static/partners.cshtml")



