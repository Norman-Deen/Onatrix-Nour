@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
	Layout = "mainLayout.cshtml";
    ViewBag.Title = Model?.Value("pageTitle") ?? null;
    var aboutBackgroundImage  = Model?.Value<IPublishedContent>("aboutBackgroundImage")?.Url() ?? "";
    var rightSectionImage01   = Model?.Value<IPublishedContent>("rightSectionImage01")?.Url() ?? "";
    var rightSectionImage02   = Model?.Value<IPublishedContent>("rightSectionImage02")?.Url() ?? "";
    var leftSectionImage01    = Model?.Value<IPublishedContent>("leftSectionImage01")?.Url() ?? "";
    var leftSectionImage02    = Model?.Value<IPublishedContent>("leftSectionImage02")?.Url() ?? "";
}



<!-------banner-------------------->
<section id="about" class="banner bg-gray">
    <div class="background"> 
        <img src="@aboutBackgroundImage" alt="Backround image">
        <div class="content">
            <h2>@Model?.Value("aboutHeadline")</h2>
           <div class="links">
                <a class="home" href="@Model?.Value("aboutLink1")">@Model?.Value("aboutLinkText1")</a>
                <div class="chevron"><i class="fa-regular fa-chevron-right"></i></div>
                <a class="home" href="@Model?.Value("aboutLink3")">@Model?.Value("aboutLinkText2")</a>
                <div class="chevron"><i class="fa-regular fa-chevron-right"></i></div>
                <a class="activ" href="@Model?.Value("aboutLink2")">@Model?.Value("aboutLinkText3")</a>
            </div>
        </div>
    </div>
</section>




<!-------solution-------------------->
<section id="risk-management">
    <div class="container">
        <div class="content">
            <nav class="about-us">
                <h4>@Model?.Value("leftSectionHeadline01")</h4>
                <div class="image">
                    <img src=@leftSectionImage01 alt="leftSectionImage01">
                </div>
                <p>@Model?.Value("leftSectionText01")</p>
                <div class="bg-primary">
                    <h4>@Model?.Value("leftSectionHeadline02")</h4>
                    <p>@Model?.Value("leftSectionText02")</p>

                    <div class="rm-input-email">
                        <input type="email" placeholder="E-mail address">
                        <span class="icon">
                            <i class="fas fa-envelope"></i> 
                        </span>
                    </div>
                    <div class="image">
                        <img src=@leftSectionImage02 alt="">
                    </div>
                </div>


            </nav>
            
            <div class="main-content">
                <div class="image">
                    <img src=@rightSectionImage01 alt="rightSectionImage01">
                </div>
                <h4>@Model?.Value("rightSectionHeadline01")</h4>
                <div class="list">
                    <ul>
                        <li>@Model?.Value("rightSectionList0101")</li>
                        <li>@Model?.Value("rightSectionList0102")</li>
                        <li>@Model?.Value("rightSectionList0103")</li>
                    </ul>
                </div>
                <h4>@Model?.Value("rightSectionHeadline02")</h4>
                <p>@Model?.Value("rightSectionText02")</p>
                <div class="list">
                    <ul>
                        <li>@Model?.Value("rightSectionList0201")</li>
                        <li>@Model?.Value("rightSectionList0202")</li>
                        <li>@Model?.Value("rightSectionList0203")</li>
                    </ul>
                </div>
                <p> @Model?.Value("rightSectionText03")</p>

                <div class="image">
                    <img src=@rightSectionImage02 alt="rightSectionImage02">
                </div>
                <h4>@Model?.Value("rightSectionHeadline03")</h4>
                <p>@Model?.Value("rightSectionText04")</p>
                <div class="list">
                    <ul>
                    <li>@Model?.Value("rightSectionList0301")</li>
                    <li>@Model?.Value("rightSectionList0302")</li>
                    <li>@Model?.Value("rightSectionList0303")</li>
                    <li>@Model?.Value("rightSectionList0304")</li>
                </ul>

                </div> 
            </div>
        </div>
    </div>

    <!-------form-------------------->
    <form>
        <div class="rm-input-group">
            <h4>Have a question ?</h4>
            <input type="text" placeholder="Name">
            <input type="email" placeholder="Email">
            <textarea placeholder="Question"></textarea>
        </div>
        <button type="submit" class="button-question  btn-primary">Submit</button>
    </form>

</section>
            



@*----------next-project-----------*@
@await Html.PartialAsync("partials/static/next-project.cshtml")
            